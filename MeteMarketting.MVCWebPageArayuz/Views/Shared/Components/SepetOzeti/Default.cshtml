@model MeteMarketting.MVCWebPageArayuz.Models.SepetOzetiViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<ul class="dropdown-menu" aria-labelledby="navbarDropdown">
    @foreach (var item in Model.Sepet.SepetElemanlaris)
    {
        <li>
            <a>@item.urun.UrunAd<span class="badge">@item.Adet</span></a>
        </li>
    }
    <li class="dropdown-divider"></li>
    
    <a><span class="glyphicon glyphicon-align-left glyphicon-shopping-cart" aria-hidden="true"></span>@Model.Sepet.Toplam</a>
    <li class="dropdown-divider"></li>
    <li>
        <a asp-controller="Sepet" asp-action="List">Siparişi Tamamla</a>
    </li>
</ul>
